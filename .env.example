# ============================================
# Audit Pit-Crew Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ============================================

# --- Application Settings ---
APP_NAME="Audit-Pit-Crew-Scanner"
ENV="development"  # development | staging | production

# --- GitHub App Configuration ---
# Create a GitHub App at: https://github.com/settings/apps
# Required permissions: checks:write, pull_requests:write, contents:read
GITHUB_APP_ID="your_app_id_here"
GITHUB_WEBHOOK_SECRET="generate_a_strong_random_secret_here"
GITHUB_PRIVATE_KEY_PATH="/usr/src/app/your-private-key.pem"

# --- Redis Configuration ---
# For local Docker Compose, use: redis://redis:6379/0
# For production, use your Redis instance URL
REDIS_URL="redis://redis:6379/0"

# --- Optional: Logging ---
LOG_LEVEL="INFO"  # DEBUG | INFO | WARNING | ERROR

# --- Optional: Scan Configuration ---
# These can also be set in audit-pit-crew.yml per repository
DEFAULT_MIN_SEVERITY="Low"
DEFAULT_BLOCK_ON_SEVERITY="High"
